	   <groupId>org.springframework</groupId>
	   <artifactId>spring-jdbc</artifactId>
	   <version>${spring.version}</version>
	 </dependency>
	 <dependency>
	   <groupId>org.springframework</groupId>
	   <artifactId>spring-test</artifactId>
	   <version>${spring.version}</version>
	 </dependency>
	</dependencies>
	
	<modules>
	<module>common</module>
	<module>masters</module>
	<module>sales</module>
	<module>client-online</module>
	</modules>
</project>